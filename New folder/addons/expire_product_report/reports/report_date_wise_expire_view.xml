<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="date_wise_expire_report">
        <t t-call="report.internal_layout"/>
        <div class="page">
            <center>
                <h1>Expire Product Report</h1>
            </center>
            <br/>
            <div>
                <div style="float:Left;">
                    Start Date
                    <span t-esc="from_date"/>
                </div>
                <div style="float:right;">
                    End date
                    <span t-esc="to_date"/>
                </div>
            </div>
            <br/>
            <center>
                <h3>Total products:</h3>
            </center>
            <t t-set="c_qty" t-value="0"></t>
            <center>
                <table class="table table-condensed" style="border: 1px solid black;">
                    <thead>
                        <tr style="border: 1px solid black;">
                            <th style="border: 1px solid black;">Sl No.</th>
                            <th style="border: 1px solid black;">Product Name</th>
                            <th style="border: 1px solid black;">Product Quantity</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="exp_data_collection" t-as="line">
                            <td style="border: 1px solid black;">
                                <span t-esc="line_index+1"/>
                            </td>
                            <td style="border: 1px solid black;">
                                <span t-esc="line['name']"/>
                            </td>
                            <td style="border: 1px solid black;">
                                <span t-esc="line['quantity']"/>
                                <t t-set="c_qty" t-value="c_qty+line['quantity']"/>
                            </td>
                        </tr>
                        <tr>
                            <td style="border: 1px solid black;">
                            </td>
                            <td style="border: 1px solid black;">
                                <b>Total :</b>
                            </td>
                            <td style="border: 1px solid black;">
                                <b>
                                    <span t-esc="c_qty"/>
                                </b>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </center>
        </div>
    </template>
</odoo>