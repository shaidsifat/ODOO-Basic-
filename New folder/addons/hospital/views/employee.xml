<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--hospital_employee_list_view-->
    <record id="hospital_employee_list_view" model="ir.ui.view">
        <field name="name">emp.profile.list.view</field>
        <field name="model">emp.profile</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="designation"/>

            </tree>
        </field>
    </record>

<!-- hospital_employee_form_view-->
    <record id="hospital_employee_form_view" model="ir.ui.view">
        <field name="name">emp.profile.form.view</field>
        <field name="model">emp.profile</field>
        <field name="arch" type="xml">
            <form string="PatientUserProfile">
                <sheet>
                    <group>
                        <group>
                            <field name="name" string="Name" required="1"/>
                        </group>
                        <group>
                            <field name="dob" required="1"/>
                        </group>
                        <group>
                            <field name="designation" required="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
     <!-- action_user_employee_profile-->
    <record id="action_user_employee_profile" model="ir.actions.act_window">
        <field name="name">Employee Profile</field>
        <field name="res_model">emp.profile</field>
        <field name="view_mode">tree,form</field>
    </record>
   <!-- menu_user_employee_profile-->
    <menuitem id="employee_profile" parent="hospital_profile_menu" name="Employee Profile" sequence="1"
         action="hospital.action_user_employee_profile"/>
</odoo>


