<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_product_attributes_tree">
        <field name="name">Product Attributes</field>
        <field name="model">product.attributes</field>
        <field name="arch" type="xml">
            <tree editable='bottom' create='1'>
                <field name="type" required="1"/>
                <field name="name"/>
                <field name="product_id" required="1"/>
                <field name="unit_price"/>
            </tree>
        </field>
    </record>
    <record id="product_attributes_type" model="ir.actions.act_window">
        <field name="name">Attributes of Product</field>
        <field name="res_model">product.attributes</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">tree</field>
        <field name="view_mode">list</field>
        <field name="domain"></field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click here to create a products attributes.
            </p>
        </field>
    </record>
    <menuitem id="menu_product_attributes"
              parent="stock.menu_product_in_config_stock"
              action="crystal_product_attributes.product_attributes_type"/>
</odoo>