<!--Sale Product  form view -->
    <record id="customer_form_view" model="ir.ui.view">
        <field name="name">sale.product.form.view</field>
        <field name="model">sale.product</field>
        <field name="arch" type="xml">
            <form string="Sale Product">
                <sheet>
                    <group>
                        <group>
                            <field name="patient" required="1"/>
                        </group>
                        <group>
                            <field name="product_ids"  widget="many2many_tags" required="1"/>
                        </group>

                        <group>
                            <field name="amount" string="Amount" required="1"/>
                        </group>

                        <group>
                            <field name="is_refund" string="Refund"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

