<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="report_patient_detail_user">
        <t t-call="report.html_container">
            <t t-call="report.external_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <div class="row">
                          <style>
                            .watermark {
                                position: middle;
                                top: 50%;
                                left: 50%;
                                transform: translate(-50%, -50%);
                                opacity: 0.2; /* Adjust opacity as needed */
                                font-size: 48px; /* Font size for text watermark */
                                text-align: center;
                                color: blue; /* Text color */
                                transform: rotate(-45deg); /* Rotate the watermark */
                            }
                            table,th,td{ border: 1px solid;
                              }
                              col-md-12
                          </style>
                        <div class="col-md-12">
                            <table class="table table-condensed">
                               <tbody>
                                    <t t-foreach="docs" t-as="l">
                                     <tr>
                                            <td>
                                                <strong>PR:</strong>
                                                <span t-field="l.patient_ref"/>
                                            </td>
                                            <td>
                                                <strong>Patient_Name:</strong>
                                               <span t-field="l.name"/>
                                            </td>

                                            <td>
                                                 <strong>Age:</strong>
                                                <span t-field="l.age"/>
                                            </td>
                                            <td>
                                                <strong>Gender:</strong>
                                               <span t-field="l.gender"/>
                                            </td>
                                            <td>
                                                <strong>Date Of Birthday:</strong>
                                               <span t-field="l.dob"/>
                                            </td>
                                            <td>
                                                <strong>Appointment:</strong>
                                               <span t-field="l.appointments_ids"/>
                                            </td>
                                             <td>
                                                <strong>Phone:</strong>
                                               <span t-field="l.phone"/>
                                            </td>
                                        </tr>
                                    </t>
                                   <div class="watermark">Patient Details</div>
                               </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="oe_structure"/>
                </div>
            </t>
        </t>
    </template>
</odoo>


