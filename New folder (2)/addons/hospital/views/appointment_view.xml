<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!--    appointment.profile.list.view-->
     <record id="appointment_list_view" model="ir.ui.view">
        <field name="name">appointment.profile.list.view</field>
        <field name="model">appointment.profile</field>
        <field name="arch" type="xml">
            <tree>
                <field name="patient_id"/>
                <field name="date" string="Appointment Date"/>
                <field name="appointment_dr_id" string="Appointment Dr"/>
            </tree>
        </field>
    </record>

    <!--    appointment.profile.form.view-->
   <record id="appointment_form_view" model="ir.ui.view">
        <field name="name">appointment.profile.form.view</field>
        <field name="model">appointment.profile</field>
        <field name="arch" type="xml">
            <form string="Appointment">
                <sheet>
                    <group>

                        <group>
                            <field name="patient_id" string="Patient ID " required="1"/>
                        </group>

                         <group>
                            <field name="patient_phone"/>
                        </group>

                         <group>
                            <field name="date" string="Appointment Date" required="1"/>
                        </group>

                        <group>
                            <field name="gender" string="Gender" required="1"/>
                        </group>

                        <group>
                            <field name="appointment_dr_id" string="Appointment Dr" required="1"/>
                        </group>

                        <group>
                            <field name="age" string="Patient Age" required="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--    action_user_appointment-->
    <record id="action_user_appointment" model="ir.actions.act_window">
        <field name="name">Patient  Appointment  NEW</field>
        <field name="res_model">appointment.profile</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!--   hospital.action_user_appointment-->
   <menuitem id="appointment_menu" parent="hospital.hospital_patient" name="Appointment"
              action="hospital.action_user_appointment"/>

</odoo>


