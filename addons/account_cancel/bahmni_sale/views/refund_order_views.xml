<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!-- Top menu item -->
        <!--
            This menu item's purpose is to overwrite another one defined in
            the base module in order to set new groups.
        -->
       <record id="action_orders" model="ir.actions.act_window">
		<field name="name">Refund Orders</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">account.invoice</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,kanban,form,calendar,pivot,graph</field>
		<field name="context">{'readonly_by_pass': True}</field>
		<field name="domain">[('state', 'not in', ('draft', 'sent'))]</field>
		<field name="help" type="html">
			<p class="oe_view_nocontent_create">
				Create a Quotation, the first step of a new sale.
			</p>
			<p>
				Once the quotation is confirmed, it becomes a sales order.
				You'll be able to invoice it and collect payments.
				From the <i>Refund Sales Orders</i> menu, you can track delivery
				orders or services.
			</p>
		</field>
	</record>
    <menuitem action="action_orders"
            id="menu_refund_sale_order" parent="sales_team.menu_sales"
            sequence="12" groups="sales_team.group_sale_salesman,sales_team.group_sale_manager"/>
</odoo>
