<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_test_single_dept" model="ir.ui.view">
            <field name="name">custom.test.single.dept.report</field>
            <field name="model">custom.test.single.dept</field>
            <field name="arch" type="xml">
                <form string="Product sale report">
                    <group>
                        <group>
                            <field name="start_date"/>
                        </group>
                        <group>
                            <field name="end_date"/>
                        </group>
                        <group>
                            <field name="user_ids" widget="many2many_tags"/>
                        </group>
                         <group>
                            <field name="categ_id"/>
                        </group>
                    </group>
                    <footer>
                        <button name="print_report" string="Print Report" class="oe_highlight"
                                type="object"/>
                         Or
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_test_single_department_report" model="ir.actions.act_window">
			<field name="name">Test Wise Single Department Report</field>
			<field name="res_model">custom.test.single.dept</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="view_test_single_dept" />
			<field name="target">new</field>
		</record>

        <menuitem id="test_single_dept_id"
                  action="action_test_single_department_report"
                  parent="sales_team.menu_sale_report"
                  sequence="1"/>
    </data>
</odoo>