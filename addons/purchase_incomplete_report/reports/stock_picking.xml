<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="purchase_template_id">
        <t t-call="report.external_layout"/>
        <div class="page">
            <center>
                <h1>
                    Incomplete Purchase Order Products  Report Collection(Multiple)
                </h1>
            </center>
            <br/>
            <div>
                <div style="float:Left;">

                    <b>Start Date:</b>
                    <span t-esc="start_date"/>
                </div>
                <div style="float:right;">

                    <b>End date:</b>
                    <span t-esc="end_date"/>
                </div>
            </div>
            <br/>
            <div>
                <div style="float:Left;">
                    <strong>Printed Time:</strong>
                    <span t-esc="current_time"/>
                </div>
                <div style="float:right;">
                    <strong>Printed By:</strong>
                    <span t-esc="username"/>
                </div>
            </div>
            <br/>
            <center>
                <h3>Products List:</h3>
            </center>
            <t t-set="c_qty" t-value="0"></t>
            <center>
                <table class="table table-condensed" style="border: 1px solid black;">
                    <thead>
                        <tr style="border: 1px solid black;">
                            <th style="border: 1px solid black;">Sl No.</th>
                            <th style="border: 1px solid black;">Purchase Order Number</th>
                            <th style="border: 1px solid black;">Vendor Name</th>
                            <th style="border: 1px solid black;">Products Name</th>
                            <th style="border: 1px solid black;">Order Quantity</th>
                            <th style="border: 1px solid black;">Received Quantity</th>
                            <th style="border: 1px solid black;">Backorder ID</th>
                            <th style="border: 1px solid black;">Backorder Of</th>
                        </tr>
                    </thead>
                    <tbody>

                        <tr t-foreach="final_data" t-as="line">
                            <td style="border: 1px solid black;">
                                <span t-esc="line_index+1"/>
                            </td>

                            <td style="border: 1px solid black;">
                                <span t-esc="line['origin']"/>
                            </td>
                            <td style="border: 1px solid black;">
                                <span t-esc="line['partner_id']"/>
                            </td>

                            <td style="border: 1px solid black;">
                               <t t-foreach="line['products']" t-as="product">
                                 <span t-esc="product.product_id.name">
                                 </span>
                                   <br/>
                               </t>
                            </td>

                             <td style="border: 1px solid black;">
                               <t t-foreach="line['products']" t-as="product">
                                 <span t-esc="product.product_qty">
                                 </span>
                                   <br/>
                               </t>
                            </td>

                            <td style="border: 1px solid black;">
                               <t t-foreach="line['products']" t-as="product">
                                 <span t-esc="product.qty_done">
                                 </span>
                                   <br/>
                               </t>
                            </td>

                            <td style="border: 1px solid black;">
                                <span t-esc="line['backorder_id']"/>
                            </td>

                            <td style="border: 1px solid black;">
                                <span t-esc="line['backorder_name']"/>
                            </td>

                        </tr>
                        <tr>
                        </tr>
                    </tbody>
                </table>
            </center>
        </div>
    </template>
</odoo>