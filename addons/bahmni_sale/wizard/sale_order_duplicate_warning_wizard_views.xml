<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Form View -->
        <record id="sale_order_duplicate_warning_wizard_view_form" model="ir.ui.view">
            <field name="name">sale.order.duplicate.warning.wizard.view.form</field>
            <field name="model">sale.order.duplicate.warning.wizard</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <spam>Sorry, you can't sale same sale order twice in a day.</spam>
                        </group>
                        <footer>
                            <button string="Cancel" class="btn-default" special="cancel"/>
                            <button name="action_confirm" string="Confirm" type="object" class="btn-primary"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_sale_order_duplicate_warning_wizard" model="ir.actions.act_window.view">
            <field name="name">Sale Order Warning</field>
            <field name="res_model">sale.order.duplicate.warning.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>