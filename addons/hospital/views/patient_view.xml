<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--    ### patientuser.profile list view ..................-->
    <record id="hospital_user_list_view" model="ir.ui.view">
        <field name="name">patient.userprofile.list.view</field>
        <field name="model">patient.userprofile</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="gender"/>
                <field name="address"/>
            </tree>
        </field>
    </record>

    <!--    ### patientuser.profile form view ..................-->
    <record id="hospital_user_form_view" model="ir.ui.view">
        <field name="name">patient.userprofile.form.view</field>
        <field name="model">patient.userprofile</field>
        <field name="arch" type="xml">
            <form string="PatientUserProfile">
                <sheet>
                    <group>

                        <group>
                            <field name="name" string="Name" required="1"/>
                            <field name="patient_ref"  required="1"/>
                        </group>
                        <group>
                            <field name="age" string="Age" required="1"/>
                        </group>
                        <group>
                            <field name="gender" string="Gender" required="1"/>
                        </group>
                        <group>
                            <field name="dob" required="1"/>
                        </group>

                        <group>
                            <field name="address" string="Address" required="1"/>
                        </group>

                        <group>
                            <field name="phone" string="Phone" required="1"/>
                        </group>

                    </group>
                </sheet>
            </form>
        </field>
    </record>
<!--submenu Patient Profile-->
    <menuitem id="patient_sub_menu" parent="hospital.hospital_patient" name="Patient Profile" sequence="1"
         action="hospital.action_user_hospital_profile"/>
</odoo>







