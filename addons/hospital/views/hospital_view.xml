<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

<!--    ### patient profile list view ....................................-->
    <record id="hospital_list_view" model="ir.ui.view">
        <field name="name">Patient.list.view</field>
        <field name="model">patient.profile</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="gender"/>
                <field name="age" string="aged"/>
                <field name="name_seq"/>
            </tree>
        </field>
    </record>

<!--    ### patient.profile form view ..................-->
    <record id="hospital_form_view" model="ir.ui.view">
        <field name="name">hospital.form.view</field>
        <field name="model">patient.profile</field>
        <field name="arch" type="xml">
            <form string="PatientProfile">
                <sheet>
                    <group>
                        <group>
                            <field name="name" string="Name" required="1"/>
                        </group>
                        <group>
                            <field name="age" string="Age" required="1"/>
                        </group>
                        <group>
                            <field name="gender" string="Gender" required="1"/>
                        </group>
                        <group>
<!--                            <field name="phone" string="Phone" required="1"/>-->
                        </group>
                        <group>
                            <field name="name_seq"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
<!--action_hospital_profile-->
    <record id="action_hospital_profile" model="ir.actions.act_window">
        <field name="name">Patient Profile</field>
        <field name="res_model">patient.profile</field>
        <field name="view_mode">tree,form</field>
    </record>

<!--action_user_hospital_profile-->
   <record id="action_user_hospital_profile" model="ir.actions.act_window">
        <field name="name">Patient User Profile</field>
        <field name="res_model">patient.userprofile</field>
        <field name="view_mode">tree,form</field>
   </record>

