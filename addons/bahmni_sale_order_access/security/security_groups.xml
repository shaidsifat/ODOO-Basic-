<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sale_order_all_permission" model="ir.model.access">
          <field name="name">End User Permission</field>
          <field name="model_id" ref="model_sale_order"/>
          <field name="perm_create">1</field>
          <field name="perm_read">1</field>
          <field name="perm_write">1</field>
          <field name="perm_unlink">1</field>
    </record>

   <record id="sale_order_user" model="ir.model.access">
      <field name="name">Base User</field>
      <field name="model_id" ref="model_sale_order"/>
       <field name="group_id" ref="base.group_user"/>
      <field name="perm_read">1</field>
      <field name="perm_write">1</field>
      <field name="perm_unlink">1</field>
   </record>

    <record model="ir.rule" id="see_his_own_sale_order">
            <field name="name">See only Sale Order</field>
<!--            <field name="model_id" ref="model_sale_order"/>-->
            <field name="model_id" ref="model_sale_order"/>
            <field name="domain_force">['|',('user_id','=',user.id),('user_id','=',False)]</field>
<!--            <field name="context">{'group_by': 'base.group_user'}</field>-->
            <field name="groups" eval="[(4, ref('bahmni_sale_order_access.sale_order_user'))]"/>
<!--            <field name="groups" eval="[(4,ref('base.group_user'))]"/>-->
    </record>

      <record model="ir.rule" id="res_partner_rule">
            <field name="name">res.partner company</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <!-- We exclude partners that have internal users (`partner_share` field) from
            the multi-company rule because it might interfere with the user's company rule
            and make some users unselectable in relational fields. This means that partners
            of internal users are always visible, not matter the company setting. -->
            <field name="domain_force">['|',('user_id','=',user.id),('user_id','=',False)]</field>
            <field name="groups" eval="[(4, ref('bahmni_sale_order_access.sale_order_user'))]"/>
      </record>



</odoo>